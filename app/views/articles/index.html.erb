<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th>Articleid</th>
      <th>Title</th>
      <th>Articletext</th>
      <th>Imageone</th>
      <th>Imagetwo</th>
      <th>Imagethree</th>
      <th>Articleauthor</th>
      <th>Area</th>
      <th>Articlecreateddatetime</th>
      <th>Classification</th>
      <th>Url</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.articleid %></td>
        <td><%= article.title %></td>
        <td><%= article.articletext %></td>
        <td><%= article.imageone %></td>
        <td><%= article.imagetwo %></td>
        <td><%= article.imagethree %></td>
        <td><%= article.articleauthor %></td>
        <td><%= article.area %></td>
        <td><%= article.articlecreateddatetime %></td>
        <td><%= article.classification %></td>
        <td><%= article.url %></td>
        <td><%= article.tag %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
